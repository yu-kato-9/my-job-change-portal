<% if current_user.registering?(enterprise) %>
  <%= form_for(current_user.candidates.find_by(enterprise_id: enterprise.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :enterprise_id, enterprise.id %>
    <%= f.submit '削除', class: 'btn btn-danger candidate-regist-btn' %>
  <% end %>
<% else %>
  <%= form_for(current_user.candidates.build) do |f| %>
    <%= hidden_field_tag :enterprise_id, enterprise.id %>
    <%= f.submit '登録', class: 'btn btn-primary candidate-regist-btn' %>
  <% end %>
<% end %>