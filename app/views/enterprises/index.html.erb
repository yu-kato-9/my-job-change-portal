<h1>候補企業管理</h1>

<div class="text-right">
  <%= link_to '新規登録', new_enterprise_path, class: 'btn btn-primary', :style => "margin-bottom: 10px;" %>
</div>

<% if @enterprises.present? %>
  <table class="table table-bordered" width="100%" style="table-layout: fixed;">
    <thead>
      <tr>
        <th width="30%">企業名</th>
        <th width="15%">掲載元/紹介元</th>
        <th width="55%">メモ</th>
      </tr>
    </thead>
    <tbody>
      <% @enterprises.each do |enterprise| %>
        <tr>
          <td><%= link_to enterprise.name, enterprise_path(enterprise) %></td>
          <td><%= "***" %></td>
          <td><%= enterprise.business_contents %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
