<%= form_for(@service) do |f| %>

  <%= render 'layouts/error_messages', model: f.object %>
  
  <div class="form-group">
    <%= f.label :name, 'サービス名' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :url, 'URL' %>
    <%= f.url_field :url, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :kind, '種別　' %>
    <%= f.select :kind, Service.kinds.keys, :prompt => "選択して下さい",class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :memo, 'メモ' %>
    <%= f.text_area :memo, :size => "1x3", class: 'form-control' %>
  </div>
  
  <hr>
  
  <div class="form-group">
    <%= f.label :name_of_person_in_charge, '担当者 名前' %>
    <%= f.text_field :name_of_person_in_charge, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :tel_of_person_in_charge, '担当者 電話番号(ハイフン無し)' %>
    <%= f.telephone_field :tel_of_person_in_charge, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :email_of_person_in_charge, '担当者 メールアドレス' %>
    <%= f.email_field :email_of_person_in_charge, class: 'form-control' %>
  </div>
  
  <div class="text-right">
    <%= f.submit '登録', class: 'btn btn-success' %>
  </div>
  
<% end %>