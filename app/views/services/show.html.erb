<h1><%= service.name %></h1>

<div class="text-right">
  <%= link_to '編集', edit_service_path, class: 'btn btn-primary service-show-btn' %>
  <%= link_to '削除', @service, method: :delete, data: { confirm: "削除しますか？"}, class: 'btn btn-danger service-show-btn' %>
</div>

<table class="table table-bordered" style="table-layout: fixed;">
  <tbody>
    <tr>
      <th width="30%">担当者名</th>
      <td width="70%"><%= @service.name_of_person_in_charge %></td>
    </tr>
    <tr>
      <th>担当者 電話番号</th>
      <td><%= @service.tel_of_person_in_charge %></td>
    </tr>
    <tr>
      <th>担当者 メールアドレス</th>
      <td><%= @service.email_of_person_in_charge %></td>
    </tr>
    <tr>
      <th>メモ</th>
      <td><%= @service.memo %></td>
    </tr>
  </tbody>
</table>

<div class="return-link"><%= link_to '転職サービス管理画面に戻る', services_path %></div>